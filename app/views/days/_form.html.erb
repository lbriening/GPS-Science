<%= form_for @day, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :test_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :test_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :weather_condition, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :weather_condition, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :temperature, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :temperature, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pressure, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pressure, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                days_path, :class => 'btn' %>
  </div>
<% end %>
